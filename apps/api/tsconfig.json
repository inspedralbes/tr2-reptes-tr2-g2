{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@iter/shared": [
        "../../packages/shared/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "prisma/**/*",
    "../../packages/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}